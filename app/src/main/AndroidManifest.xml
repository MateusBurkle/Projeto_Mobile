<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Projeto">

        <!-- Launcher -->
        <activity
            android:name=".ui.CadastroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.PrincipalActivity" />

        <activity
        android:name=".ui.MainActivity"
        android:parentActivityName=".ui.PrincipalActivity">
        <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ui.PrincipalActivity" />
    </activity>

    <activity
        android:name=".ui.TarefasActivity"
        android:parentActivityName=".ui.PrincipalActivity">
        <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ui.PrincipalActivity" />
    </activity>

    <activity
        android:name=".ui.ProgressoActivity"
        android:parentActivityName=".ui.PrincipalActivity">
        <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ui.PrincipalActivity" />
    </activity>

    <activity
        android:name=".ui.ListaTarefasActivity"
        android:parentActivityName=".ui.PrincipalActivity">
        <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ui.PrincipalActivity" />
    </activity>

</application>
    </manifest>
